<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PsikologFragments.PaketKonsultasiFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_view_paket"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_weight="1">
        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/nama_paket"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rec_view_paket"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nama Paket"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/jumlah_sesi"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_paket"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Jumlah Sesi"
            android:inputType="number" />

        <EditText
            android:id="@+id/harga_paket"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/jumlah_sesi"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Harga Sesi"
            android:inputType="number" />

        <Button
            android:id="@+id/tambah_paket"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/harga_paket"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Tambah Paket" />

    </RelativeLayout>
</ScrollView >
